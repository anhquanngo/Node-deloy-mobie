<!DOCTYPE html>
<html>
  <head>
    <%- include("layout/head", {title: product.prd_name}) %>
    <link rel="stylesheet" href="css/product.css" />
  </head>

  <body>
    <!--	Header	-->
    <%- include("layout/header") %>
    <!--	End Header	-->

    <!--	Body	-->
    <div id="body">
      <div class="container">
        <div class="row">
          <%- include("layout/menu") %>
        </div>
        <div class="row">
          <div id="main" class="col-lg-8 col-md-12 col-sm-12">
            <!--	Slider	-->
            <div id="slide" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <%- include("layout/slider") %>
            </div>
            <!--	End Slider	-->

            <!-- Main content -->
            <!--	List Product	-->
            <div id="product">
              <div id="product-head" class="row">
                <div id="product-img" class="col-lg-6 col-md-6 col-sm-12">
                  <img src="/assets/images/products/<%= product.prd_image %>" />
                </div>
                <div id="product-details" class="col-lg-6 col-md-6 col-sm-12">
                  <h1><%= product.prd_name %></h1>
                  <ul>
                    <% if (product.prd_warranty) { %>
                    <li><span>Bảo hành:</span> <%= product.prd_warranty %></li>
                    <% } %> <% if (product.prd_accessories) { %>
                    <li><span>Đi kèm:</span> <%= product.prd_accessories %></li>
                    <% } %> <% if (product.prd_new) { %>
                    <li><span>Tình trạng:</span> <%= product.prd_new %></li>
                    <% } %> <% if (product.prd_promotion) { %>
                    <li>
                      <span>Khuyến Mại:</span> <%= product.prd_promotion %>
                    </li>
                    <% } %>

                    <li id="price">Giá Bán (chưa bao gồm VAT)</li>
                    <li id="price-number"><%= product.prd_price %>đ</li>
                    <li id="status">
                      <% if (product.prd_status === 1) { %>
                      <span class="badge badge-success">Còn hàng</span>
                      <% } else { %>
                      <span class="badge badge-danger">Hết hàng</span>
                      <% } %>
                    </li>
                  </ul>
                  <% if (product.prd_status === 1) { %>
                  <form action="/add-to-cart" method="post">
                    <div id="add-cart">
                      <input type="hidden" name="quantity" value="1" />
                      <input
                        type="hidden"
                        name="prd_id"
                        value="<%= product._id %>"
                      />
                      <input
                        type="submit"
                        name="sbm"
                        value="Mua ngay"
                        class="btn btn-warning"
                      />
                      <input
                        type="submit"
                        name="sbm"
                        value="Thêm vào giỏ hàng"
                        class="btn btn-info"
                      />
                    </div>
                  </form>
                  <% } %>
                </div>
              </div>
              <div id="product-body" class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <h3>Đánh giá về <%= product.prd_name %></h3>
                  <%= product.prd_details %>
                </div>
              </div>

              <!--	Comment	-->
              <div id="comment" class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <h3>Bình luận sản phẩm</h3>
                  <form
                    method="post"
                    action="/product-detail-<%=product._id%>/comments"
                  >
                    <div class="form-group">
                      <label>Tên:</label>
                      <input
                        name="name"
                        required
                        type="text"
                        class="form-control"
                      />
                    </div>
                    <div class="form-group">
                      <label>Email:</label>
                      <input
                        name="email"
                        required
                        type="email"
                        class="form-control"
                        id="pwd"
                      />
                    </div>
                    <div class="form-group">
                      <label>Nội dung:</label>
                      <textarea
                        name="content"
                        required
                        rows="8"
                        class="form-control"
                      ></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                      Gửi
                    </button>
                  </form>
                </div>
              </div>
              <!--	End Comment	-->

              <!--	Comments List	-->
              <div id="comments"></div>
            </div>
          </div>

          <div id="sidebar" class="col-lg-4 col-md-12 col-sm-12">
            <%- include("layout/sidebar") %>
          </div>
        </div>
      </div>
    </div>
    <!--	End Body	-->

    <!--	Footer	-->
    <%- include("layout/footer")%>
    <script>
      function getCommets(page = 1) {
        $.ajax({
          method: "POST",
          url: "/ajax/get-comment-product",
          data: {
            id: "<%= product._id%>",
            page,
          },
          success: function (data) {
            if (data && data.data.html) {
              $("#comments").html(data.data.html);
            }
          },
        });
      }

      $(document).ready(function () {
        getCommets();

        $(document).on("click", ".page-link", function (e) {
          e.preventDefault();

          const _that = $(this);
          const page = _that.data("page");

          getCommets(page);
        });
      });
    </script>
    <!--	End Footer	-->
  </body>
</html>
