<%- include("../../layout/header") %> <%- include("../../layout/side-bar") %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li>
        <a href="#"
          ><svg class="glyph stroked home">
            <use xlink:href="#stroked-home"></use></svg
        ></a>
      </li>
      <li><a href="">Quản lý sản phẩm</a></li>
      <li class="active">Cập nhật sản phẩm</li>
    </ol>
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Cập nhật sản phẩm</h1>
    </div>
  </div>
  <!--/.row-->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <form role="form" method="post" enctype="multipart/form-data">
            <div class="col-md-6">
              <div class="form-group">
                <label>Tên sản phẩm</label>
                <input
                  required=""
                  name="prd_name"
                  class="form-control"
                  placeholder=""
                  value="<%= product.prd_name %>"
                />
              </div>

              <div class="form-group">
                <label>Giá sản phẩm</label>
                <input
                  required=""
                  name="prd_price"
                  type="number"
                  min="0"
                  class="form-control"
                  value="<%= product.prd_price %>"
                />
              </div>
              <div class="form-group">
                <label>Bảo hành</label>
                <input
                  required=""
                  name="prd_warranty"
                  type="text"
                  class="form-control"
                  value="<%= product.prd_warranty %>"
                />
              </div>
              <div class="form-group">
                <label>Phụ kiện</label>
                <input
                  required=""
                  name="prd_accessories"
                  type="text"
                  class="form-control"
                  value="<%= product.prd_accessories %>"
                />
              </div>
              <div class="form-group">
                <label>Khuyến mãi</label>
                <input
                  required=""
                  name="prd_promotion"
                  type="text"
                  class="form-control"
                  value="<%= product.prd_promotion %>"
                />
              </div>
              <div class="form-group">
                <label>Tình trạng</label>
                <input
                  required=""
                  name="prd_new"
                  type="text"
                  class="form-control"
                  value="<%= product.prd_new %>"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Ảnh sản phẩm</label>
                <input
                  id="prd_image"
                  name="prd_image"
                  type="file"
                />
                <br />
                <div>
                  <img
                    width="150"
                    height="150"
                    id="img_pview"
                    src="/assets/images/products/<%= product.prd_image %>"
                  />
                </div>
              </div>
              <div class="form-group">
                <label>Danh mục</label>
                <select name="cat_id" class="form-control">
                  <% categories.forEach((category) => { %>
                  <option <% if (product.cat_id.toString() === category.id) { %> selected <%} %> value="<%= category._id %>"
                    ><%= category.cat_name %></option
                  >
                  <% }) %>
                </select>
              </div>

              <div class="form-group">
                <label>Trạng thái</label>
                <select name="prd_status" class="form-control">
                  <option value="1" <% if (product.prd_status === 1) { %> selected <%} %> >Còn hàng</option>
                  <option value="0" <% if (product.prd_status === 0) { %> selected <%} %>>Hết hàng</option>
                </select>
              </div>

              <div class="form-group">
                <label>Sản phẩm nổi bật</label>
                <div class="checkbox">
                  <label>
                    <input name="prd_featured" <% if (product.prd_featured === 1) { %> checked <%} %> type="checkbox" value="1" />Nổi
                    bật
                  </label>
                </div>
              </div>
              <div class="form-group">
                <label>Mô tả sản phẩm</label>
                <textarea
                  required=""
                  name="prd_details"

                  class="form-control"
                  rows="3"
                ><%= product.prd_details %></textarea>
              </div>
              <button name="sbm" type="submit" class="btn btn-primary">
                Cập nhật
              </button>
              <button type="reset" class="btn btn-default">Làm mới</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- /.col-->
  </div>
  <!-- /.row -->
</div>

<script>
  $(document).ready(function () {
    const prd_image = $("#prd_image");

    prd_image.on("change", function (e) {
      const file = e.target.files[0];
      const reader = new FileReader();
      reader.onload = function (event) {
        $("#img_pview").attr("src", event.target.result);
      };
      if (file) {
        reader.readAsDataURL(file);
      }
    });
  });
</script>
<%- include("../../layout/footer") %>
